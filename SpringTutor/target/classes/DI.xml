<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
<!-- Dependency Injection -->
	<!-- Definition for textEditor bean -->
	<!-- Constructor based -->
   <bean id = "textEditorConstructorBased" class = "dependencyInjectionByXML.TextEditor">
      <constructor-arg ref = "spellChecker"/>
   </bean>
   <!-- Setter based -->
   <bean id = "textEditorSetterBased" class = "dependencyInjectionByXML.TextEditor">
      <property name="spellChecker" ref = "spellChecker"/>
   </bean>
   <!-- Definition for spellChecker bean -->
   <bean id = "spellChecker" class = "dependencyInjectionByXML.SpellChecker"></bean>       
</beans>
